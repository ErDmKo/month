<!DOCTYPE html>
<html lang="en">
    <head>
        <link 
            rel="apple-touch-icon"
            sizes="180x180"
            href="<%= Routes.static_path(@conn, "/img/apple-touch-icon.png") %>"
        />
        <link 
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="<%= Routes.static_path(@conn, "/img/favicon-32x32.png") %>"
        />
        <link 
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="<%= Routes.static_path(@conn, "/img/favicon-16x16.png") %>"
        />
        <link 
            rel="manifest"
            href="/site.webmanifest"
        />
        <link 
            rel="mask-icon"
            href="<%= Routes.static_path(@conn, "/img/safari-pinned-tab.svg") %>"
            color="#5bbad5"
        />
        <link 
            rel="stylesheet"
            href="<%= Routes.static_path(@conn, "/css/style.css") %>" />
        <meta name="msapplication-TileColor" content="#da532c">
        <meta name="theme-color" content="#ffffff">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title><%= title(@conn.assigns) %></title>
        <link href="https://fonts.googleapis.com/css?family=Poiret+One|Roboto" rel="stylesheet">
        <meta charset="utf-8"/>
        <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
        <meta name="description" content="<%= description(@conn.assigns) %>"/>
        <title>Main page</title>
    </head>
    <body>
        <%= @inner_content %>
        <!-- Yandex.Metrika counter -->
        <script type="text/javascript" >
            (function (d, w, c) {
                (w[c] = w[c] || []).push(function() {
                    try {
                        w.yaCounter53149972 = new Ya.Metrika({
                            id:53149972,
                            clickmap:true,
                            trackLinks:true,
                            accurateTrackBounce:true
                        });
                    } catch(e) { }
                });

                var n = d.getElementsByTagName("script")[0],
                    s = d.createElement("script"),
                    f = function () { n.parentNode.insertBefore(s, n); };
                s.type = "text/javascript";
                s.async = true;
                s.src = "https://mc.yandex.ru/metrika/watch.js";

                if (w.opera == "[object Opera]") {
                    d.addEventListener("DOMContentLoaded", f, false);
                } else { f(); }
            })(document, window, "yandex_metrika_callbacks");
        </script>
        <noscript><div><img src="https://mc.yandex.ru/watch/53149972" style="position:absolute; left:-9999px;" alt="" /></div></noscript>
        <!-- /Yandex.Metrika counter -->
    </body>
</html>